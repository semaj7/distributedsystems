<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <!--TODO: do a nice layout please -->

    <ImageView
        android:id="@+id/backgroundPopUp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.5"
        android:background="@android:color/background_dark" />

    <!-- The main image to be centered in the layout.
     Instead of ImageView, you can change it to
     anything, for example a TextView-->

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:alpha="0.5"
        android:background="@color/background_floating_material_light"
        android:layout_alignBottom="@+id/upVoteButton"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/flagText"
        android:layout_alignParentStart="true"
        android:id="@+id/imageView"
        android:layout_alignTop="@+id/flag" />

    <LinearLayout
        android:id="@+id/TextHolder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/followUserFromFlag"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal" >

    </LinearLayout>



    <Button
        android:id="@+id/followUserFromFlag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/followUser"
        android:padding="5dp"
        android:paddingRight="10dp"
        android:layout_above="@+id/FlagView"
        android:layout_alignStart="@+id/textView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/rating"
        android:textColor="#000000"
        android:id="@+id/textView"
        android:layout_below="@+id/ButtonHolder"
        android:layout_toStartOf="@+id/ButtonHolder" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ratingTextView"
        android:textColor="#000000"
        android:layout_above="@+id/upVoteButton"
        android:layout_alignEnd="@+id/followUserFromFlag" />

    <ImageView
        android:id="@+id/FlagView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/logo"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <!--The button holder for our upvote and downvote buttons.
    Horizontally stacking. Change it anyway you want-->
    <LinearLayout
        android:id="@+id/ButtonHolder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/FlagView"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal" >

    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:id="@+id/upVoteButton"
        android:layout_height="wrap_content"
        android:text="@string/upVote"
        android:padding="5dp"
        android:paddingRight="10dp"
        android:layout_below="@+id/textView"
        android:layout_toStartOf="@+id/FlagView" />

    <Button
        android:layout_width="wrap_content"
        android:id="@+id/downVoteButton"
        android:layout_height="wrap_content"
        android:text="@string/downVote"
        android:padding="5dp"
        android:paddingRight="10dp"
        android:layout_below="@+id/ratingTextView"
        android:layout_toEndOf="@+id/ButtonHolder" />

    <TextView android:text="@string/noTextFoundDefault"
        android:id="@+id/flagText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:layout_above="@+id/TextHolder"
        android:layout_centerHorizontal="true" />

    <TextView android:text="@string/flag_text"
        android:id="@+id/flag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:layout_above="@+id/flagText"
        android:layout_centerHorizontal="true" />

</RelativeLayout>



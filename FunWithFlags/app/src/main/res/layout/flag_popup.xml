<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <!--TODO: do a nice layout please -->

    <ImageView
        android:id="@+id/backgroundPopUp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.5"
        android:background="@android:color/background_dark"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <!-- The main image to be centered in the layout.
     Instead of ImageView, you can change it to
     anything, for example a TextView-->

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="350dp"
        android:alpha="0.75"
        android:background="@color/background_floating_material_light"
        android:id="@+id/imageView"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignStart="@+id/flagView"
        android:layout_alignEnd="@+id/upVoteButton" />


    <ImageView
        android:id="@+id/flagView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_action_place"
        android:layout_alignTop="@+id/imageView"
        android:layout_centerHorizontal="true" />

    <TextView android:text="@string/noTextFoundDefault"
        android:id="@+id/flagText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:layout_below="@+id/flagView"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:id="@+id/addFavourite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_action_favorite"
        android:background="@drawable/roundbutton"
        android:layout_marginTop="24dp"
        android:layout_below="@+id/flagText"
        android:layout_centerHorizontal="true"
        android:padding="5dp"
        android:paddingRight="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/fieldUsername"
        android:textColor="#000000"
        android:id="@+id/textViewUsername"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/addFavourite"
        android:layout_centerHorizontal="true" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:text="@string/userName"
        android:id="@+id/placeholderUsername"
        android:textColor="#000000"
        android:layout_below="@+id/textViewUsername"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:id="@+id/followUserFromFlag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_action_add_person"
        android:background="@drawable/roundbutton"
        android:layout_below="@+id/placeholderUsername"
        android:layout_centerHorizontal="true"
        android:padding="5dp"
        android:paddingRight="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/rating"
        android:textColor="#000000"
        android:id="@+id/textView"
        android:layout_marginTop="23dp"
        android:layout_below="@+id/followUserFromFlag"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ratingTextView"
        android:text="@string/noRating"
        android:textColor="#000000"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:id="@+id/upVoteButton"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_action_good"
        android:padding="5dp"
        android:paddingRight="10dp"
        android:background="@drawable/roundbutton"
        android:layout_below="@+id/ratingTextView"
        android:layout_toStartOf="@+id/textView" />

    <ImageButton
        android:layout_width="wrap_content"
        android:id="@+id/downVoteButton"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_action_bad"
        android:padding="5dp"
        android:paddingRight="10dp"
        android:background="@drawable/roundbutton"
        android:layout_below="@+id/ratingTextView"
        android:layout_toEndOf="@+id/textView" />

</RelativeLayout>


